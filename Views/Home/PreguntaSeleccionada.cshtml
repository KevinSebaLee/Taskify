<div class="row no-gutters" style="min-height: 100vh; min-width: 99vw;">
    <div class="col-2 bg-white pt-5">
        <h1 class="text-center fw-bold">Community</h1>
        <div class="pb-5 ps-5 pe-5">
            <h3 class="text-start mt-4">Filtros</h3>
            <hr>
            <div class="d-flex flex-column align-items-start">
                <p class="mb-2 fw-bold">C#</p>
                <p class="mb-2 fw-bold">JavaScript</p>
                <p class="mb-2 fw-bold">Illustrator</p>
                <p class="mb-2 fw-bold">Backend</p>
            </div>
        </div>
    </div>

    <div class="col-10 text-white p-0 fondoRespuestas" style="min-height: 100vh;">
        <div class="bg-white shadow d-flex p-3 mb-5 ps-5 align-items-center" style="min-height: 25vh; margin: 0; padding: 0; border-bottom-left-radius: 40px; border-bottom-right-radius: 40px;">
            <img src="~/img/SinSesion.png" class="rounded-circle ms-4" style="height: 20vh; width: 10vw;" alt="User profile image">
            <h3 class="text-dark ms-4">@ViewBag.PreguntaElegida.Titulo</h3>
        </div>

        <div>
            <h1 class="ms-5 mb-5">Respuestas</h1>

            @for(int i = 0; i < ViewBag.Respuestas.Count; i++){
                <div class="bg-white text-dark p-3 shadow-sm ms-5 ps-5 mt-5" style="width: 77vw; height: 15vh; border-radius: 30px;">
                    <div class="d-flex align-items-center">
                        <img src="~/img/SinSesion.png" class="rounded-circle ms-4" style="height: 12vh; width: 7vw;" alt="User profile image">
                        <div class="row">
                            <div class="col-md-10">
                                <p class="mb-0 ps-5 h5">@ViewBag.Respuestas[i].Respuesta</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-end align-items-end m-3">
            <form action='@Url.Action("PublicarRespuesta")'>
                <input type="hidden" name="IdPregunta" value="@ViewBag.PreguntaElegida.IdPregunta">
                <button class="text-white bg-success ps-5 pe-5 pb-2 fw-bold text-decoration-none" type="submit" style="border: 0; border-radius: 100px; min-height: 4vh; padding-top:6px; font-size:1em">Reply</button>
            </form>
        </div>
    </div>
</div>
