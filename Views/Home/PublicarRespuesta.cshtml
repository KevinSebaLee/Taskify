<form class="create" method="post" action='@Url.Action("CrearRespuesta")'>
    <div class="contentForm">
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Name</span>
            <input type="text" name="Respuesta" class="form-control" placeholder="Project name" aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <input type="hidden" name="IdUsuarioCreador" value="@TaskifyService.User.IdUsuario">
        <input type="hidden" name="IdPregunta" value="@ViewBag.IdPregunta">     
        
        <button type="submit" class="btn btn-light">Create</button>
    </div>
</form>