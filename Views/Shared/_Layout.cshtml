<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap" rel="stylesheet">
</head>

<body>
    <header class="py-3" style="background-color: #e0e0e0;">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href='@Url.Action("Perfil")' class="me-4">
                    <img src="~/img/SinSesion.png" height="50" width="50" style="border-radius: 50%;">
                </a>
            </div>

            <div class="d-flex">
                <a href='@Url.Action("Agenda")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Agenda</h5>
                </a>
                <a href='@Url.Action("Empleos")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Empleos</h5>
                </a>
                <a href='@Url.Action("Index")' class="mx-4 text-dark text-decoration-none">
                    <h3 class="text-success fw-bold mb-0">Taskify</h3>
                </a>
                <a href='@Url.Action("Community")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Community</h5>
                </a>
                <a href='@Url.Action("Tasks")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Mejorá</h5>
                </a>
            </div>

            <div class="d-flex align-items-center">
                <a href='@Url.Action("Chat")' class="me-4">
                    <img src="~/img/Chat.png" height="50" width="50">
                </a>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
