<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Taskify</title>
    <link rel="icon" href="~/img/Chat.webp">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>

<body>
    <header class="py-3 Index" style="background-color: #e0e0e0; position: sticky; padding: 10px 16px; z-index: 3; min-width: 99vw;">
        @if(TaskifyService.User != null){
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a href='@Url.Action("Perfil")' class="me-4">
                        @if(TaskifyService.User.FotoPerfil == null){
                            <img src="~/img/SinSesion.png" height="50" width="50" style="border-radius: 50%;">
                        }
                        else{
                            <img src="@TaskifyService.User.FotoPerfil" height="50" width="50" style="border-radius: 50%;">
                        }
                    </a>
                </div>

                <div class="d-flex align-items-end pb-3">
                    <a href='@Url.Action("Agenda")' class="me-4 text-dark text-decoration-none">
                        <h5 class="mb-0 text-white">Agenda</h5>
                    </a>
                    <a href='@Url.Action("Empleos")' class="me-4 text-dark text-decoration-none">
                        <h5 class="mb-0 text-white">Empleos</h5>
                    </a>
                    <a href='@Url.Action("Index")' class="me-4 text-decoration-none">
                        <h3 class="text-success fw-bold mb-0" style="font-size: calc(1vw + 1rem);">Taskify</h3>
                    </a>
                    <a href='@Url.Action("Community")' class="me-4 text-dark text-decoration-none">
                        <h5 class="mb-0 text-white">Community</h5>
                    </a>
                    <a href='@Url.Action("Tasks")' class="me-4 text-dark text-decoration-none">
                        <h5 class="mb-0 text-white">Mejorá</h5>
                    </a>
                </div>

                <div class="d-flex align-items-center">
                    <a href='@Url.Action("Chat")' class="me-4">
                        <img src="~/img/Chat.png" height="45" width="45">
                    </a>
                </div>
            </div>
        }
        else{
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center pb-3">
                    <a href='@Url.Action("Index")' class="text-decoration-none">
                        <h3 class="text-success fw-bold mb-0" style="font-size: calc(1vw + 1rem);">Taskify</h3>
                    </a>
                </div>

                <div class="d-flex">
                    <a href='@Url.Action("Register")' class="text-decoration-none text-white bg-success p-3  ps-4 pe-4 me-5 fw-bold" style="border-radius: 10px;">Registrarse</a>
                    <a href='@Url.Action("Login")' class="LogIN text-decoration-none p-3 ps-4 pe-4 fw-bold" style="border-radius: 10px; border: 2px solid green; color: green;">Log in</a>
                </div>
            </div>
        }
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark" style="padding: 20px; min-width: 99vw;">
        <div class="container">
            <div class="row align-items-center justify-content-between  ">
                <div class="col-md-4 d-flex flex-column align-items-center">
                    <h1 class="text-white" style="font-size: 2.8rem; font-weight: bold;">Taskify</h1>

                    <div class="d-flex justify-content-center mb-3">
                        <i class="fa-brands fa-instagram" style="font-size:1.5em; 60px; border-radius: 50%; margin-right: 10px; color: #ffffff;"></i>
                        <i class="fa-brands fa-x-twitter" style="font-size:1.5em; 60px; border-radius: 50%; margin-right: 10px; color: #ffffff;"></i>
                        <i class="fa-solid fa-envelope"style="font-size:1.5em; 60px; border-radius: 50%; margin-right: 10px; color: #ffffff;"></i>
                        <i class="fa-brands fa-facebook" style="font-size:1.5em; 60px; border-radius: 50%; margin-right: 10px; color: #ffffff;"></i>                    
                    </div>

                    <h5 class="text-white">Copyright © 2024 Taskify</h5>
                </div>
                
                <div class="text-white col-md-2">
                    <h1 style="font-weight: bold;">Contact</h1>
                    <ul class="list-unstyled">
                        <li>Instagram</li>
                        <li>Facebook</li>
                        <li>Gmail</li>
                    </ul>
                </div>

                <div class="text-white col-md-2">
                    <h1 style="font-weight: bold;">Visit</h1>
                    <ul class="list-unstyled">
                        <li>Proyectos</li>
                        <li>Community</li>
                        <li>Noticias</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/d5ee22bb47.js" crossorigin="anonymous"></script>
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css' rel='stylesheet' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js'></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
