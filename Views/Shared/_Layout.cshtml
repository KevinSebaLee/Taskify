<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="mt-3 pb-3" style="border-bottom: 1px solid black;">
        <div class="d-flex align-items-center">
            <a href='@Url.Action("Perfil")'><img class="ms-4" src="~/img/SinSesion.png" height="60vh" width="60vw" style="border-radius: 50px; border: 5px solid black;"></a>

            <div class="container d-flex justify-content-between">
                <a href='@Url.Action("Agenda")'><h5>Agenda</h5></a>
                <a href='@Url.Action("Empleos")'><h5>Empleos</h5></a>
                <a href='@Url.Action("Index")'><h3 class="text-success">Taskify</h3></a>
                <a href='@Url.Action("Community")'><h5>Community</h5></a>
                <a href='@Url.Action("Tasks")'><h5>Mejorá</h5></a>
            </div>

            <a href='@Url.Action("Chat")'><img class="me-4" src="~/img/Chat.png" height="60vh" width="60vw"></a>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - NombreProyecto
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
