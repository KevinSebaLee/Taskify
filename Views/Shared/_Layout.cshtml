<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap" rel="stylesheet">
</head>

<body>
    <header class="py-3" style="background-color: #e0e0e0; position: sticky; padding: 10px 16px; z-index: 3;">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href='@Url.Action("Perfil")' class="me-4">
                    <img src="~/img/SinSesion.png" height="50" width="50" style="border-radius: 50%;">
                </a>
            </div>

            <div class="d-flex align-items-end pb-3">
                <a href='@Url.Action("Agenda")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Agenda</h5>
                </a>
                <a href='@Url.Action("Empleos")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Empleos</h5>
                </a>
                <a href='@Url.Action("Index")' class="me-4 text-decoration-none">
                    <h3 class="text-success fw-bold mb-0" style="font-size: calc(1vw + 1rem);">Taskify</h3>
                </a>
                <a href='@Url.Action("Community")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Community</h5>
                </a>
                <a href='@Url.Action("Tasks")' class="me-4 text-dark text-decoration-none">
                    <h5 class="mb-0">Mejorá</h5>
                </a>
            </div>

            <div class="d-flex align-items-center">
                <a href='@Url.Action("Chat")' class="me-4">
                    <img src="~/img/Chat.webp" height="35" width="35">
                </a>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark" style="padding: 20px;">
        <div class="container">
            <div class="row align-items-center justify-content-between  ">
                <div class="col-md-4 d-flex flex-column align-items-center">
                    <h1 class="text-white" style="font-size: 2.8rem; font-weight: bold;">Taskify</h1>

                    <div class="d-flex justify-content-center mb-3">
                        <img src="~/img/SinSesion.png" style="width: 40px; height: 40px; border-radius: 50%; margin-right: 10px;">
                        <img src="~/img/SinSesion.png" style="width: 40px; height: 40px; border-radius: 50%; margin-right: 10px;">
                        <img src="~/img/SinSesion.png" style="width: 40px; height: 40px; border-radius: 50%; margin-right: 10px;">
                        <img src="~/img/SinSesion.png" style="width: 40px; height: 40px; border-radius: 50%;">
                    </div>

                    <h5 class="text-white">Copyright © 2024 Taskify</h5>
                </div>
                
                <div class="text-white col-md-2">
                    <h1 style="font-weight: bold;">Contact</h1>
                    <ul class="list-unstyled">
                        <li>Proyectos</li>
                        <li>Community</li>
                        <li>Noticias</li>
                    </ul>
                </div>

                <div class="text-white col-md-2">
                    <h1 style="font-weight: bold;">Visit</h1>
                    <ul class="list-unstyled">
                        <li>Proyectos</li>
                        <li>Community</li>
                        <li>Noticias</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
